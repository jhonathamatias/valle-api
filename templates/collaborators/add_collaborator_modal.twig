<!-- Modal Structure -->
<div id="add-collaborator" class="modal">
	<form id="form-collaborator" autocomplete="off">
		<div class="modal-content">
			<h5>Adicionar colaborador</h5>
			<div class="row">
				<div class="input-field col s12">
					<select id="user_id" class="form-field" data-name="Usúario" name="user_id">
						<option value="" disabled selected>Selecione o usúario</option>
					</select>
					<label>Usúario</label>
					<span class="helper-text" data-error="wrong" data-success=""></span>
				</div>
				<div class="input-field col s12">
					<select id="occupation_id" class="form-field" data-name="Cargo" name="occupation_id">
						<option value="" disabled selected>Selecione o cargo</option>
					</select>
					<label>Cargo</label>
					<span class="helper-text" data-error="wrong" data-success=""></span>
				</div>
			</div>
		</form>
		<div class="modal-footer">
			<div class="col s12">
				<button class="btn-flat modal-close waves-effect text-red" onclick="formTools.reset()">
					<i class="material-icons left">close</i>
					<strong>Cancelar</strong>
				</button>
				<button class="btn-flat waves-effect" id="collaborator-create" name="action">
					<i class="material-icons left">save</i>
					<strong>Criar</strong>
				</button>
			</div>
		</div>
	</form>
</div>
